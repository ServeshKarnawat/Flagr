{
  "manifest_version": 3,
  "name": "Gemini Terms Analyzer",
  "version": "1.0",
  "description": "Automatically runs a Gemini analysis when popup opens.",
  "action": {
    "default_popup": "hello.html",
    "default_icon": "hello_extensions.png"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/*"
  ]
}
